@using Project_Transcendence_Database.Entities;

@model List<Ability> // Przyjmujemy, że umiejętności są listą

<h2>Umiejętności Klasy Postaci</h2>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var ability in Model)
        {
            <li>
                <strong>Nazwa umiejętności:</strong> @ability.Name
                <br />
                <strong>Opis:</strong> @ability.Description
            </li>
        }
    </ul>
}
else
{
    <p>Brak umiejętności do wyświetlenia.</p>
}
